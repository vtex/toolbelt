{
  "compilerOptions": {
    "types": [
      "node",
      "axios",
      "bluebird",
      "bluebird-global",
      "jest"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017"
    ],
    "outDir": "lib",
    "sourceMap": false,
    "target": "es2015",
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules", "src/__tests__"
  ]
}
