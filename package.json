{
  "name": "vtex",
  "version": "0.19.2",
  "description": "CLI tool for creating and managing VTEX apps",
  "bin": {
    "vtex": "bin/vtex.js",
    "vtex-login": "bin/vtex-login.js",
    "vtex-logout": "bin/vtex-logout.js",
    "vtex-watch": "bin/vtex-watch.js",
    "vtex-publish": "bin/vtex-publish.js"
  },
  "scripts": {
    "start": "npm run permitexe && babel src --out-dir . --source-maps --watch",
    "build": "rm -rf bin lib && npm run permitexe && babel src --out-dir .",
    "permitexe": "chmod +x ./src/**/*",
    "lint": "eslint src",
    "compile": "babel src --out-dir .",
    "test": "mocha --compilers js:babel-core/register"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vtex/toolbelt.git"
  },
  "keywords": [
    "CLI",
    "vtex",
    "toolbelt",
    "apps"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vtex/toolbelt/issues"
  },
  "dependencies": {
    "archiver": "^1.0.0",
    "chalk": "^1.1.1",
    "chokidar": "^1.2.0",
    "docopt": "^0.6.2",
    "express": "^4.13.3",
    "glob": "^7.0.0",
    "http-proxy": "^1.11.2",
    "http-status-name": "^2.0.0",
    "node-libs-browser": "^1.0.0",
    "ora": "^0.2.1",
    "prompt": "~1.0.0",
    "q": "^1.4.1",
    "requestretry": "^1.8.0",
    "semver": "^5.0.3",
    "shelljs": "^0.7.0",
    "supports-color": "^3.1.1",
    "tiny-lr": "^0.2.0",
    "update-notifier": "^0.7.0",
    "vtexsay": "^1.0.3",
    "webpack": "^1.12.10",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.12.1"
  },
  "preferGlobal": true,
  "devDependencies": {
    "babel-cli": "^6.1.18",
    "babel-core": "^6.1.21",
    "babel-eslint": "^6.0.2",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.1.0",
    "eslint": "^2.0.0",
    "eslint-config-vtex": "^3.0.1",
    "eslint-plugin-react": "^5.0.1",
    "mocha": "^2.3.3",
    "mock-fs": "^3.4.0"
  }
}
