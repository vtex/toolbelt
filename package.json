{
  "name": "vtex",
  "version": "1.0.0-rc.7",
  "description": "The platform for e-commerce apps.",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "scripts": {
    "watch": "babel src --out-dir=lib --watch",
    "lint": "eslint src",
    "test": "npm run lint && nyc ava src/*.test.js src/**/*.test.js",
    "test-watch": "ava src/*.test.js src/**/*.test.js --watch",
    "prepublish": "npm run test && babel src --out-dir=lib --ignore=*.test.js",
    "uninstall": "node scripts/uninstall.js",
    "exe": "chmod +x lib/cli.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "engines": {
    "node": ">=0.12.0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vtex/toolbelt.git"
  },
  "keywords": [
    "CLI",
    "vtex",
    "ecommerce",
    "commerce",
    "omnichannel",
    "platform",
    "react",
    "toolbelt",
    "apps"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vtex/toolbelt/issues"
  },
  "dependencies": {
    "@vtex/api": "^0.8.0",
    "any-promise": "^1.3.0",
    "archiver": "^1.0.0",
    "bluebird": "^3.4.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.5.2",
    "cli-table": "^0.3.1",
    "configstore": "^2.0.0",
    "debounce": "^1.0.0",
    "es6-error": "^3.0.0",
    "eslint": "^3.3.0",
    "eslint-config-vtex": "^4.0.0",
    "eslint-config-vtex-react": "^1.0.2",
    "eslint-plugin-react": "^5.0.1",
    "eventsource": "^0.2.1",
    "findhelp": "^0.1.3",
    "glob": "^7.0.5",
    "inquirer": "^1.0.3",
    "minimist": "^1.2.0",
    "moment": "^2.13.0",
    "ora": "^0.2.3",
    "pad": "^1.0.0",
    "ramda": "^0.22.0",
    "requisition": "^1.7.0",
    "rimraf": "^2.5.3",
    "tiny-lr": "^0.2.1",
    "update-notifier": "^0.7.0",
    "validator": "^5.3.0",
    "winston": "^2.2.0"
  },
  "preferGlobal": true,
  "devDependencies": {
    "ava": "^0.15.0",
    "babel-cli": "^6.1.18",
    "babel-core": "^6.1.21",
    "babel-eslint": "^6.0.2",
    "babel-preset-es2015": "^6.13.0",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.9.0",
    "coveralls": "^2.11.9",
    "nyc": "^6.4.4"
  },
  "ava": {
    "failFast": true,
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  }
}
