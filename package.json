{
  "name": "vtex",
  "version": "1.12.0",
  "description": "The platform for e-commerce apps.",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "scripts": {
    "watch": "run-s clean babel",
    "babel": "babel src --out-dir=lib --watch",
    "clean": "rimraf lib/",
    "build": "babel src --out-dir=lib --ignore=*.test.js",
    "lint": "eslint src",
    "nyc": "nyc ava src/*.test.js src/**/*.test.js",
    "test": "run-s lint nyc",
    "test-watch": "ava src/*.test.js src/**/*.test.js --watch",
    "prepublish": "run-s clean test build",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "engines": {
    "node": ">=4"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vtex/toolbelt.git"
  },
  "keywords": [
    "CLI",
    "vtex",
    "ecommerce",
    "commerce",
    "omnichannel",
    "platform",
    "react",
    "toolbelt",
    "apps"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vtex/toolbelt/issues"
  },
  "dependencies": {
    "@vtex/api": "^0.11.5",
    "any-promise": "^1.3.0",
    "babel-eslint": "^7.0.0",
    "bluebird": "^3.4.0",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.1",
    "cli-table": "^0.3.1",
    "configstore": "^2.0.0",
    "debounce": "^1.0.0",
    "es6-error": "^4.0.0",
    "eslint": "^3.4.0",
    "eslint-config-vtex": "^4.0.0",
    "eslint-config-vtex-react": "^2.1.0",
    "eslint-plugin-react": "^6.7.1",
    "eventsource": "^0.2.1",
    "fast-async": "^6.0.34",
    "findhelp": "^0.3.0",
    "glob": "^7.0.5",
    "inquirer": "^2.0.0",
    "jsonpath": "^0.2.6",
    "latest-version": "^2.0.0",
    "minimist": "^1.2.0",
    "moment": "^2.13.0",
    "ora": "^0.4.0",
    "pad": "^1.0.0",
    "ramda": "^0.22.0",
    "semver-diff": "^2.1.0",
    "strip-ansi": "^3.0.1",
    "update-notifier": "^1.0.3",
    "validator": "^6.0.0",
    "winston": "^2.2.0"
  },
  "preferGlobal": true,
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-cli": "^6.16.0",
    "babel-core": "^6.16.0",
    "babel-plugin-transform-object-rest-spread": "^6.16.0",
    "babel-preset-es2015-node4": "^2.1.0",
    "babel-register": "^6.16.3",
    "coveralls": "^2.11.9",
    "longjohn": "^0.2.11",
    "npm-run-all": "^4.0.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.4"
  },
  "ava": {
    "failFast": true,
    "require": [
      "babel-register"
    ]
  }
}
