{
  "name": "vtex",
  "version": "2.20.10",
  "description": "The platform for e-commerce apps",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "scripts": {
    "ts": "tsc",
    "ts-watch": "tsc --watch",
    "nyc": "nyc ava lib/*.test.js lib/**/*.test.js",
    "ava": "ava lib/*.test.js lib/**/*.test.js --watch",
    "clean": "rimraf lib/",
    "exe": "node scripts/make-executable.js",
    "mkdir": "mkdirp lib/",
    "build": "run-s clean ts exe",
    "watch": "run-s clean mkdir exe ts-watch",
    "lint": "tsc --noEmit && tslint src/**/*.ts",
    "test": "run-s lint build nyc",
    "test-watch": "run-p ts-watch ava",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "prepublish": "run-s clean test",
    "prereleasy": "npm run prepublish",
    "postreleasy": "npm publish"
  },
  "engines": {
    "node": ">=6"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vtex/toolbelt.git"
  },
  "keywords": [
    "CLI",
    "vtex",
    "ecommerce",
    "commerce",
    "omnichannel",
    "platform",
    "react",
    "toolbelt",
    "apps"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vtex/toolbelt/issues"
  },
  "dependencies": {
    "@vtex/api": "^0.37.0",
    "any-promise": "^1.3.0",
    "babel-eslint": "^8.2.2",
    "bluebird": "^3.5.0",
    "chalk": "^2.3.2",
    "chokidar": "^2.0.2",
    "clear-module": "^2.1.0",
    "cli-table": "^0.3.1",
    "clipboardy": "^1.1.4",
    "configstore": "^3.0.0",
    "debounce": "^1.0.0",
    "diff": "^3.2.0",
    "eslint": "^4.18.2",
    "eslint-config-vtex": "^8.0.0",
    "eslint-config-vtex-react": "^3.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^7.0.0",
    "eventsource": "^1.0.1",
    "extendable-error": "^0.1.5",
    "findhelp": "^1.0.2",
    "fs-extra": "^5.0.0",
    "get-stream": "^3.0.0",
    "globby": "^8.0.1",
    "inquirer": "^5.1.0",
    "jsonwebtoken": "^8.2.0",
    "latest-version": "^3.0.0",
    "moment": "^2.21.0",
    "opn": "^5.2.0",
    "ora": "^2.0.0",
    "pad": "^2.0.3",
    "pipe-streams-to-promise": "^0.2.0",
    "ramda": "^0.25.0",
    "randomstring": "^1.1.5",
    "request": "^2.83.0",
    "semver": "^5.3.0",
    "semver-diff": "^2.1.0",
    "unzip-stream": "^0.3.0",
    "update-notifier": "^2.3.0",
    "winston": "^2.3.1",
    "ws": "^5.0.0"
  },
  "preferGlobal": true,
  "devDependencies": {
    "@types/bluebird": "^3.0.37",
    "@types/bluebird-global": "^3.0.1",
    "@types/chokidar": "^1.4.31",
    "@types/configstore": "^2.1.0",
    "@types/fs-extra": "^5.0.1",
    "@types/inquirer": "^0.0.36",
    "@types/node": "^9.4.6",
    "@types/ramda": "types/npm-ramda",
    "@types/semver-diff": "^2.1.0",
    "@types/winston": "^2.2.0",
    "ava": "^0.25.0",
    "coveralls": "^3.0.0",
    "longjohn": "^0.2.12",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.4.1",
    "rimraf": "^2.6.1",
    "tslint": "^5.2.0",
    "tslint-config-vtex": "^2.0.0",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.4.2"
  },
  "ava": {
    "failFast": true
  }
}
