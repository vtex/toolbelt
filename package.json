{
  "name": "vtex",
  "version": "0.13.0",
  "description": "CLI tool for creating and managing VTEX apps",
  "bin": {
    "vtex": "bin/vtex.js",
    "vtex-login": "bin/vtex-login.js",
    "vtex-logout": "bin/vtex-logout.js",
    "vtex-watch": "bin/vtex-watch.js",
    "vtex-publish": "bin/vtex-publish.js"
  },
  "scripts": {
    "start": "node bin/vtex.js",
    "watch": "babel src --out-dir bin --watch",
    "lint": "eslint src",
    "compile": "babel src --out-dir .",
    "prepublish": "npm test && npm run compile",
    "test": "mocha --compilers js:babel-core/register"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vtex/toolbelt.git"
  },
  "keywords": [
    "CLI",
    "vtex",
    "toolbelt",
    "apps"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vtex/toolbelt/issues"
  },
  "dependencies": {
    "archiver": "^0.15.1",
    "chalk": "^1.1.1",
    "chokidar": "^1.2.0",
    "docopt": "^0.6.2",
    "express": "^4.13.3",
    "glob": "^5.0.15",
    "http-proxy": "^1.11.2",
    "node-libs-browser": "^0.5.3",
    "prompt": "~0.2.14",
    "q": "^1.4.1",
    "request": "^2.64.0",
    "semver": "^5.0.3",
    "shelljs": "^0.5.3",
    "supports-color": "^3.1.1",
    "tiny-lr": "^0.2.0",
    "vtexsay": "^1.0.3",
    "webpack": "^1.12.2",
    "webpack-dev-middleware": "^1.2.0",
    "webpack-hot-middleware": "^2.4.1"
  },
  "preferGlobal": true,
  "devDependencies": {
    "babel-cli": "^6.1.18",
    "babel-core": "^6.1.21",
    "babel-eslint": "^4.1.5",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-stage-0": "^6.1.18",
    "chai": "^3.3.0",
    "eslint": "^1.9.0",
    "eslint-config-vtex": "^2.0.0",
    "eslint-plugin-react": "^3.9.0",
    "mocha": "^2.3.3"
  }
}
