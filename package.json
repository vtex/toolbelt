    "configstore": "~4.0.0",
    "csvtojson": "~2.0.10",
    "debounce": "~1.2.0",
    "diff": "~3.2.0",
    "enquirer": "~2.3.2",
    "eventsource": "~1.0.7",
    "extendable-error": "~0.1.5",
    "findhelp": "~1.1.0",
    "fs-extra": "~7.0.0",
    "get-stream": "~4.0.0",
    "globby": "~8.0.1",
