    "@types/node": "^10.1.1",
    "@types/ramda": "types/npm-ramda#dist",
    "@types/semver-diff": "^2.1.0",
    "@types/tar": "^4.0.3",
    "eslint": "^6.3.0",
    "eslint-config-vtex": "^11.0.0",
    "jest": "^24.8.0",
    "longjohn": "^0.2.12",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.3"
  }
}
