{
  "name": "vtex",
  "version": "2.78.1",
  "description": "The platform for e-commerce apps",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "scripts": {
    "ts": "tsc",
    "ts-watch": "tsc --watch",
    "clean": "rimraf lib/",
    "exe": "node scripts/make-executable.js",
    "mkdir": "mkdirp lib/",
    "build": "run-s clean ts exe",
    "watch": "run-s clean mkdir exe ts-watch",
    "lint": "tsc --noEmit && eslint src/**/*.ts",
    "format": "prettier --config ./.prettierrc --write \"src/**/*.ts\" \"src/**/*.js\"",
    "test-jest": "jest --coverage",
    "test": "run-s format lint build test-jest",
    "test-watch": "run-p ts-watch test-jest",
    "prepublish": "run-s clean test",
    "prereleasy": "npm run prepublish",
    "postreleasy": "npm publish"
  },
  "engineStrict": true,
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vtex/toolbelt.git"
  },
  "keywords": [
    "CLI",
    "vtex",
    "ecommerce",
    "commerce",
    "omnichannel",
    "platform",
    "react",
    "toolbelt",
    "apps"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vtex/toolbelt/issues"
  },
  "dependencies": {
    "@vtex/api": "^3.65.1",
    "ajv": "^6.10.2",
    "any-promise": "^1.3.0",
    "async-retry": "^1.2.3",
    "bluebird": "^3.5.0",
    "chalk": "^2.3.2",
    "child-process-es6-promise": "^1.2.0",
    "chokidar": "^3.0.2",
    "clear-module": "^3.0.0",
    "cli-table": "^0.3.1",
    "cli-table2": "^0.2.0",
    "clipboardy": "^2.1.0",
    "configstore": "^4.0.0",
    "csvtojson": "^2.0.10",
    "debounce": "^1.0.0",
    "diff": "^3.2.0",
    "enquirer": "^2.3.0",
    "eventsource": "^1.0.1",
    "extendable-error": "^0.1.5",
    "findhelp": "^1.1.0",
    "fs-extra": "^7.0.0",
    "get-stream": "^4.0.0",
    "globby": "^8.0.1",
    "js-yaml": "^3.13.0",
    "json-array-split": "^1.0.0",
    "json2csv": "^4.5.2",
    "jsonwebtoken": "^8.2.0",
    "latest-version": "^4.0.0",
    "moment": "^2.24.0",
    "numbro": "2.1.0",
    "opn": "^5.2.0",
    "ora": "^3.0.0",
    "pad": "^2.0.3",
    "pipe-streams-to-promise": "^0.2.0",
    "progress": "^2.0.3",
    "prompt-confirm": "^2.0.4",
    "qrcode-terminal": "^0.12.0",
    "ramda": "^0.25.0",
    "ramda-adjunct": "^2.9.0",
    "randomstring": "^1.1.5",
    "request": "^2.83.0",
    "semver": "^5.3.0",
    "semver-diff": "^2.1.0",
    "tar": "^4.4.10",
    "unzip-stream": "^0.3.0",
    "update-notifier": "^3.0.1",
    "winston": "^3.2.1",
