    "@types/configstore": "^2.1.0",
    "@types/fs-extra": "^5.0.1",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/node": "^10.1.1",
    "@types/ramda": "types/npm-ramda#dist",
