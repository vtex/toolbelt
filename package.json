{
  "name": "vtex",
  "version": "2.87.3",
  "description": "The platform for e-commerce apps",
  "main": "lib/index.js",
  "bin": "lib/cli.js",
  "scripts": {
    "exe": "node scripts/make-executable.js",
    "watch": "bash ./scripts/symlink.sh && yarn nodemon",
    "format": "prettier --config ./.prettierrc --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "eslint . --ext .ts --config .eslintrc",
    "format-lint": "yarn format && yarn lint",
    "build": "rm -rf lib && tsc && yarn exe",
    "test": "jest",
    "ci:test": "yarn test --ci",
    "ci:prettier-check": "prettier --check --config ./.prettierrc \"src/**/*.ts\" \"src/**/*.js\""
  },
  "engineStrict": true,
  "engines": {
    "node": ">=10"
  },
  "files": [
    "scripts/closeChrome.scpt",
    "lib/"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/vtex/toolbelt.git"
  },
  "keywords": [
    "CLI",
    "vtex",
    "ecommerce",
    "commerce",
    "omnichannel",
    "platform",
    "react",
    "toolbelt",
    "apps"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/vtex/toolbelt/issues"
  },
  "dependencies": {
    "@vtex/api": "3.67.1",
    "@yarnpkg/lockfile": "^1.1.0",
