    "nyc": "^13.0.2",
    "rimraf": "^2.6.1",
    "tslint": "^5.8.0",
    "tslint-config-vtex": "^2.0.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.0.3"
  },
  "ava": {
    "failFast": true
  }
}
